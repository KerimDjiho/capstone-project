<p id="notice"><%= notice %></p>

<h1>Student Informations</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Dob</th>
      <th>Course name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @student_informations.each do |student_information| %>
      <tr>
        <td><%= student_information.first_name %></td>
        <td><%= student_information.last_name %></td>
        <td><%= student_information.dob %></td>
        <td><%= student_information.course_choice.first.course_name %></td>
        <td><%= link_to 'Show', student_information %></td>
        <td><%= link_to 'Edit', edit_student_information_path(student_information) %></td>
        <td><%= link_to 'Destroy', student_information, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Student Information', new_student_information_path %>
